---

interface Props{
    totalPages: number;
}
const {totalPages} =Astro.props
const url =Astro.url;

const pageParam = Number(url.searchParams.get("page") ?? 1)

const currentPage = Math.max((pageParam > totalPages) ? totalPages : pageParam, 1);

const path = url.pathname;
---

<div class="flex justify-between my-32">

    <a class="hover:bg-green-500 transition-all duration-300 p-2 bg-green-300 text-black font-semibold rounded-md" href={`${path}?page=${Math.max(currentPage - 1, 1)}`}>Anteriores</a>

    <span>{pageParam} de {totalPages}</span>

    <a class="hover:bg-green-500 transition-all duration-300 p-2 bg-green-300 text-black font-semibold rounded-md" href={`${path}?page=${Math.min(currentPage + 1, totalPages)}`}>Siguientes</a>
</div>